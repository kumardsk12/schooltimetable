{
  "name": "schooltimetable",
  "version": "1.0.0",
  "description": "School Timetable Management System with Sinhala Language Support",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "seed": "cd backend && node utils/seedData.js",
    "seed-clear": "cd backend && node utils/seedData.js --clear",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "start": "cd backend && npm start",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "keywords": [
    "school",
    "timetable",
    "education",
    "sinhala",
    "sri-lanka",
    "scheduling",
    "management"
  ],
  "author": "School Timetable Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kumardsk12/schooltimetable.git"
  },
  "bugs": {
    "url": "https://github.com/kumardsk12/schooltimetable/issues"
  },
  "homepage": "https://github.com/kumardsk12/schooltimetable#readme"
}
